<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="20dp">

    <ImageView
        android:id="@+id/iV_album_capa"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/filhos_do_rossi"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tV_album_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomealbum"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/light_font"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tV_album_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_artista"
            android:textColor="@color/silver"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tV_preco_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/preco"
            android:textColor="@color/silver"/>
    </LinearLayout>

</LinearLayout>