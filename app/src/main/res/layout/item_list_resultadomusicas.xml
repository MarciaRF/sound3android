<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewArtista"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:elevation="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:srcCompat="@android:color/darker_gray"
        android:src="@drawable/ic_action_cd"/>

    <TextView
        android:id="@+id/textView_nomeMusica"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="NomeMusica"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="174dp"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:shadowRadius="1"
        android:gravity="center"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/textView_ArtistaMusica"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="ArtistaMusica"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/textView_nomeMusica"
        android:layout_toEndOf="@id/imageViewArtista"/>

    <TextView
        android:id="@+id/textView_albumMusica"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="AlbumMusica"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/textView_ArtistaMusica"
        android:layout_toEndOf="@id/imageViewArtista"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/action_carrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_albumMusica"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/imageViewArtista"
        android:src="@drawable/ic_action_cart_white"
        app:backgroundTint="@color/colorBlack" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/action_favMusica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_albumMusica"
        android:layout_toEndOf="@id/action_carrinho"
        android:src="@drawable/ic_action_fav_white"
        app:backgroundTint="@color/colorBlack"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/action_removerMusica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/action_favMusica"
        android:layout_below="@id/textView_albumMusica"
        android:src="@drawable/ic_action_remover"
        app:backgroundTint="@color/colorBlack"/>



</RelativeLayout>