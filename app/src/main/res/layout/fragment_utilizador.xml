<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Perfil"
        android:textColor="@color/light_font"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="176dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="@color/light_font"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diogo98"
            android:layout_marginLeft="5dp"
            android:textColor="@color/silver"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="218dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVieew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Email"
            android:textColor="@color/light_font"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/texeftV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="diogocruz@gmail.com"
            android:textColor="@color/silver"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="47dp"
        android:text="Termisnar Sessão"
        android:textColor="@color/silver"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/logout_icon"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_below="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-149dp"
        android:layout_marginBottom="60dp"
        android:drawableStart="@drawable/list_icon"
        android:drawablePadding="10dp"
        android:text="Registo de Compras"
        android:textColor="@color/silver"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="18dp"
        android:drawablePadding="10dp"
        android:text="Sacar Músicas"
        android:drawableStart="@drawable/download_icon"
        android:textColor="@color/silver"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        app:srcCompat="@drawable/edit_icon" />
</RelativeLayout>