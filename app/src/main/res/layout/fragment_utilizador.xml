<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageViewPerfil"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="@string/perfil"
        android:textColor="@color/light_font"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="176dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_username"
            android:textColor="@color/light_font"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_username"
            android:layout_marginLeft="5dp"
            android:textColor="@color/silver"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="218dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVieew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/emailRegisto"
            android:textColor="@color/light_font"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emailRegisto"
            android:textColor="@color/silver"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />
    </LinearLayout>



    <Button
        android:id="@+id/buttonRegistoCompra"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPerfil"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/list_icon"
        android:drawablePadding="10dp"
        android:text="@string/registo_de_compras"
        android:textColor="@color/silver"
        android:textStyle="bold"
        android:onClick="mostrarCompras"/>

    <Button
        android:id="@+id/buttonDownload"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonRegistoCompra"
        android:layout_below="@id/buttonRegistoCompra"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="18dp"
        android:drawablePadding="10dp"
        android:text="@string/download_musicas"
        android:drawableStart="@drawable/download_icon"
        android:textColor="@color/silver"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="22dp"
        app:srcCompat="@drawable/edit_icon" />
</RelativeLayout>