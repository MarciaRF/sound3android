<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewCapaAlbum"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:elevation="2dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textViewNomeAlbum"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewCapaAlbum"
        android:layout_alignStart="@id/imageViewCapaAlbum"
        android:gravity="center"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:text="nomeAlbum"
        android:textColor="@color/light_font"
        android:textSize="20dp"
        android:maxLength="10"
        android:scrollHorizontally = "true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewNomeArtista"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black_font"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:shadowRadius="1"
        android:textSize="16dp"
        android:maxLength="10"
        android:scrollHorizontally = "true"
        android:ellipsize="end"
        android:layout_alignStart="@id/imageViewCapaAlbum"
        android:layout_below="@+id/textViewNomeAlbum"
        android:text="(nomeArtista)"
        android:textAlignment="center"/>

</RelativeLayout>