<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipleiria.estg.dei.amsi.sound3application">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    -->
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activitys.RegistoActivity"></activity>
        <activity android:name=".Activitys.MainActivity"></activity>
        <activity
            android:name=".Activitys.LoginSignUpActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.LoginSignUpActivity$RegistoActivity"
            android:parentActivityName=".Activitys.LoginSignUpActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activitys.DetalhesAlbumActivity"
            android:parentActivityName=".Activitys.MainActivity"/>
        <activity
            android:name=".Activitys.PesquisaActivity"
            android:parentActivityName=".Activitys.MainActivity" />

        <activity android:name=".Activitys.DetalhesArtistaActivity"
            android:parentActivityName=".Activitys.MainActivity"/>
        <activity android:name=".Activitys.DetalhesGeneroActivity"
            android:parentActivityName=".Activitys.MainActivity"/>


        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity android:name=".Activitys.RegistoComprasActivity"
            android:parentActivityName=".Activitys.MainActivity"/>
        <activity android:name=".Activitys.FavoritosRecyclerActivity"
            android:parentActivityName=".Activitys.MainActivity"/>
        <activity android:name=".Activitys.ComprasActivity"
            android:parentActivityName=".Activitys.MainActivity"/>
    </application>

</manifest>